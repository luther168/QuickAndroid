<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="leftImage">@drawable/ic_back_white</item>
        <item name="rightTextColor">@android:color/white</item>
        <item name="rightTextSize">20sp</item>
        <item name="titleBackground">@color/colorPrimary</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="titleTextSize">26sp</item>
    </style>

    <style name="FullHorizontalDividerStyle">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="FullVerticalDividerStyle">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>